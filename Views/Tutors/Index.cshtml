@model IEnumerable<Online_Tutor_Booking_Final.Models.Tutor>

@{
    ViewData["Title"] = "Index";
}
@using Microsoft.AspNetCore.Identity



<h1>Tutors</h1>

@if (User.IsInRole("tutor_admin"))
{
<p>
    <a class="btn btn-primary" asp-action="Create">+ Add New</a>
</p>
}
<table class="table table-bordered table-secondary">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MobileNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MobileNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @if(User.IsInRole("tutor_admin") ){ 
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                 
                </td>
            </tr>
        }
    </tbody>
</table>
